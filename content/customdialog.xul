<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/global.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://emic/locale/overlay.dtd">

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        id="emiccustomdatedialog"
        title="&customdialog.title;"
        onload="onLoad();"
        ondialogaccept="return onOK();">

  <script type="application/javascript" src="chrome://emic/content/customdialog.js"/>

  <commandset id="customdialogCommands">
    <command id="customdate_changed" oncommand="customdate_changed();" />
    <command id="datelist_changed" oncommand="datelist_changed();" />
    <command id="timelist_changed" oncommand="timelist_changed();" />
  </commandset>
  
  <dialogheader title="&customdialog.title;" description="&customdialog.description;"/>
  <groupbox flex="1">
    <caption label="&customdialog.groupbox.label;"/>
    <radiogroup id="emic-custom-radiogroup">
      <grid>
        <columns>
          <column/>
          <column/>
          <column flex="1"/>
        </columns>
        <rows>
          <row align="center">
            <radio id="emic-custom-date" label="&customdialog.radio.customdate;"/>
            <datepicker id="emic-custom-datepicker" type="popup" firstdayofweek="1" hideyear="false" command="customdate_changed"/>
            <timepicker id="emic-custom-timepicker" increment="1" hideseconds="true" command="customdate_changed"/>
          </row>
          <row align="center">
            <radio id="emic-suggestion-date" label="&customdialog.radio.suggestions;"/>
            <menulist id="emic-suggestion-datelist" label="&date;" command="datelist_changed">
              <menupopup>
                <menuitem id="suggestion-date-now" label="&today;"/>
                <menuitem id="suggestion-date-never" label="&never;"/>
              </menupopup>
            </menulist>
            <menulist id="emic-suggestion-timelist" label="&time;" command="timelist_changed">
              <menupopup>
                <menuitem id="suggestion-time-now" label="&now;"/>
                <menuitem id="suggestion-time-never" label="&never;"/>
              </menupopup>
            </menulist>
          </row>
        </rows>
      </grid>
    </radiogroup>
  </groupbox>

</dialog>